@model IEnumerable<InvoiceSystem.Entities.Invoice.CountryDivision>

        @{
        ViewData["Title"] = "Index";
        }
        
        
        <section id="dom">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4>Index</h4>
                            <p>
                                <a asp-action="Create" class="btn-success p-lg-1 rounded">افزودن</a>
                            </p>
                        </div>
                        <div class="card-body card-dashboard table-responsive">
                            <table class="table table-striped table-bordered zero-configuration datatable">
                                <thead>
                                    <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Type)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Parent)
                                                </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) {
                                    <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Type)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Parent.Id)
                                                </td>
                                            <td>
                                                <a asp-action="Edit" class="success p-0" asp-route-id="@item.Id"><i class=" ft-edit-2 font-medium-3"></i></a>
                                                <a asp-action="Details" class="info p-0" asp-route-id="@item.Id"><i class="fa fa-info-circle font-medium-3 mr-2"></i></a>
                                                <a asp-action="Delete" class="danger" asp-route-id="@item.Id"><i class="ft ft-trash font-medium-3 mr-2"></i></a>
                                            </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
@section Scripts {
<partial name="~/Views/Shared/Admin/_dataTableScript.cshtml" />
<partial name="~/Views/Shared/Admin/_dataTable.cshtml" />
}

