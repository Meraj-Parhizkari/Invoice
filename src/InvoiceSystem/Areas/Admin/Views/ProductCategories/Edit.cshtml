@model InvoiceSystem.Entities.Invoice.ProductCategory

@{
    ViewData["Title"] = "Edit";
}

<h2>ویرایش گروه کالا</h2>



<div class="col-12">
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-content">
            <div class="px-3">

                <form asp-action="Edit" class="form">
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Parent" class="control-label"></label>
                                    <select asp-for="ParentId" class="form-control" asp-items="ViewBag.Parents">
                                        <option value="">درصورت نیاز انتخاب کنید...</option>
                                    </select>
                                </div>
                            </div>
                            
                        </div>
                    </div>


                    <div class="form-actions right">

                        <button type="submit" class="btn btn-raised btn-primary h-40">
                            <i class="fa fa-check-square-o"></i> ذخیره
                            @*@Html.ValidationSummary(false)*@
                        </button>
                        <a asp-action="Index" class="btn btn-raised btn-warning h-40"><i class="ft-x"></i>بازگشت</a>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
