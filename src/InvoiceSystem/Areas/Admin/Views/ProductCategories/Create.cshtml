@model InvoiceSystem.Entities.Invoice.ProductCategory

@{
    ViewData["Title"] = "Create";
}



<div class="col-12">
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-content">
            <div class="px-3">
                <form asp-controller="ProductCategories" asp-action="create" class="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-body">
                        @*<h4 class="form-section"><i class="ft-info"></i> اطلاعات کاربر</h4>*@
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Parent" class="control-label"></label>
                                    <select asp-for="ParentId" class="form-control" asp-items="ViewBag.Parents">
                                        <option>درصورت نیاز انتخاب کنید...</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions right">
                        <button type="submit" class="btn btn-raised btn-primary">
                            <i class="fa fa-check-square-o"></i> ذخیره
                        </button>
                        <a class="btn btn-raised btn-warning" data-dismiss="modal">بازگشت</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
