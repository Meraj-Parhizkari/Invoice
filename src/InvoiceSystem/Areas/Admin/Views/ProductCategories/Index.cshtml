@model IEnumerable<InvoiceSystem.Entities.Invoice.ProductCategory>

@{
    ViewData["Title"] = "Index";
}



<section>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>مدیریت گروه کالا ها</h4>
                    <p>
                        <a asp-action="Create" class="btn-success p-lg-1 rounded">ایجاد گروه کالای جدید</a>
                    </p>
                </div>
                <div class="card-content ">
                    <div class="card-body card-dashboard table-responsive">
                        <table class="table table-striped table-bordered datatable" >
                            <thead>
                                <tr role="row">
                                    <th>

                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Parent)
                                    </th>
                                    <th>عملیات <i class="ft-settings"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Parent.Name)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="success  p-0"><i class="ft-edit-2 font-medium-3 mr-2"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="info p-0"><i class="fa fa-info-circle font-medium-3 mr-2"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="danger p-0"><i class="ft-trash font-medium-3 mr-2"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr role="row">
                                    <th>

                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Parent)
                                    </th>
                                    <th>عملیات <i class="ft-settings"></i></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{ 

    <partial name="~/Views/Shared/Admin/_dataTableScript.cshtml" />
    <partial name="~/Views/Shared/Admin/_dataTable.cshtml" />

}