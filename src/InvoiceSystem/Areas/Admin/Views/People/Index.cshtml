@model IEnumerable<InvoiceSystem.Entities.Invoice.Person>

@{
    ViewData["Title"] = "Index";
}







<section id="dom">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>مدیریت مشتریان</h4>
                    <p>
                        <a asp-action="Create" class="btn-success p-lg-1 rounded">ایجاد کاربر جدید</a>
                    </p>
                </div>
                <div class="card-content ">
                    <div class="card-body card-dashboard table-responsive">
                        <table class="table table-striped table-bordered datatable">
                            <thead>
                                <tr role="row">
                                    <th>عملیات <i class="ft-settings"></i></th>
                                    <th>
                                        شناسه
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EconomicalNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RegisterNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TownId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ZipCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NationalCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fax)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PersonTypeId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.SystemId)
                                    </th>                                
                                </tr>



                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="success  p-0"><i class="ft-edit-2 font-medium-3 mr-2"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="info p-0"><i class="fa fa-info-circle font-medium-3 mr-2"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="danger p-0"><i class="ft-trash font-medium-3 mr-2"></i></a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EconomicalNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegisterNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TownId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ZipCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NationalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fax)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PersonTypeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SystemId)
                                    </td>
                                </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr role="row">
                                    <th>عملیات <i class="ft-settings"></i></th>
                                    <th>
                                        شناسه
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EconomicalNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RegisterNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TownId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ZipCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NationalCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Fax)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PersonTypeId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SystemId)
                                    </th>                                    
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{

    <partial name="~/Views/Shared/Admin/_dataTableScript.cshtml" />
    <partial name="~/Views/Shared/Admin/_dataTable.cshtml" />
}














